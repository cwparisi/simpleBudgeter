
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="icon" href="../../favicon.ico">

        <title>Dashboard Template for Bootstrap</title>

    </head>

    <body>

    <div id="wrapper">

    <%= render "layouts/navigation" %>

    <div id="page-wrapper" style="min-height: 100%">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">
                <h2 class="sub-header"><%=action_name.capitalize%> Income</h2>
                    <div class="form-container" style="margin-left: 0px">
                   
                   <%= form_for @income do |i| %>
                    <% if @income.errors.any? %>
                        <div class="alert alert-danger" role="alert">
                          <ul>
                            <% @income.errors.full_messages.each do |msg| %>
                              <li><%= msg %></li>
                            <% end %>
                          </ul>
                        </div>
                    <% end %>

                    <div class="row formFieldRow">
                        <div class="col-xs-3">
                            <label for="income_name" class="fieldLabel">Name</label>
                        </div>
                        <div class="col-xs-9">
                            <%= i.text_field(:name, class: "form-control", style: "width:200px", placeholder: "Enter name") %>
                        </div> 
                    </div>

                    <div class="row formFieldRow">
                        <div class="col-xs-3">
                            <label for="income_amount" class="fieldLabel">Amount</label>
                        </div>
                        <div class="col-xs-9">
                            <%= i.text_field(:amount, class: "form-control", style: 'width:200px', placeholder: "Enter amount") %>
                        </div> 
                    </div>

                    <div class="row formFieldRow">
                        <div class="col-xs-3">
                            <label for="income_frquency" class="fieldLabel">Frequency</label>
                        </div>
                        <div class="col-xs-9">
                            <select class="form-control" style="width: 200px" name="income[frequency]" id="income_frequency" value="@income.frequency">
                                    <option value="">Select frequency</option>
                                <% @frequencies.each do |f| %>
                                    <option value="<%=f%>"><%=f%></option>
                                <% end %>
                            </select>
                        </div> 
                    </div>

                    <div class="row formFieldRow">
                        <div class="col-xs-3">
                            <label for="income_weekly_hours" class="fieldLabel">Hours per week</label>
                        </div>
                        <div class="col-xs-9">
                            <%= i.text_field(:weekly_hours, class: "form-control", style: 'width:200px', placeholder: "Enter hours") %>
                        </div> 
                    </div>                 

                    <br>
                    <p style="font-size: 12px">*Amount should be a post-taxes value. </p>
                  <input type="submit" name="commit" class="btn btn-default" style="background-color: #388E3C; color: #fff" value="<%= action_name.capitalize%> income">
                <% end %>
            </div> <!-- form-container -->
            </div> <!-- col-lg-12 -->
          </div> <!-- row -->
        </div> <!-- container-fluid -->
    </div> <!-- page wrapper -->
</div> <!-- wrapper -->
<%= render "layouts/navigationFooter" %>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
  </body>
</html>
